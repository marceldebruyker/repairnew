---
import Seo from '../components/Seo.astro'
import Nav from '../components/Nav.astro'
import Footer from '../components/Footer.astro'
const { title = 'Repair Caf√© Leonberg', description = 'Gemeinsam reparieren statt wegwerfen.', image } = Astro.props
---
<!doctype html>
<html lang="de" class="scroll-smooth dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <Seo title={title} description={description} image={image} />
    <link rel="preconnect" href="https://cdn.sanity.io" />
    <link rel="icon" href="/favicon.ico" />
  </head>
  <body class="min-h-dvh bg-slate-900 text-slate-100">
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:z-50 focus:rounded focus:bg-brand-600 focus:text-white focus:px-4 focus:py-2">Zum Inhalt springen</a>
    <Nav />
    <main id="main-content" class="mx-auto max-w-7xl px-6 lg:px-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
